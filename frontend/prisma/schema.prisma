generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  cases Case[]
}

model Case {
  id        Int      @id @default(autoincrement())
  disease   String
  createdAt DateTime @default(now())
  userId    Int
  symptoms  String
  user      User     @relation(fields: [userId], references: [id])
}
